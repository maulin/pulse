<div class="songsContainer">
  <%= form_tag(search_songs_path, :method => 'GET') do %>
    <p>
      <%= label_tag :bpm %><br>
      <%= number_field_tag :bpm %>
    </p>

    <p>
      <%= submit_tag('Search Songs') %>
    </p>
  <% end %>

  <% if @songs.present? %>
    <p>
      Songs @ <%= @bpm %> bpm
    </p>
    <% @songs.each do |song| %>
      <a href=<%= song["uri"] %>><%= "#{song["artists"].first["name"]} - #{song["name"]}" %></a></br>
    <% end %>
  <% elsif @bpm > 0 %>
    <p>
      No songs found @ <%= @bpm %> bpm
    </p>
  <% end %>
</div>
